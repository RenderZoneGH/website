{% extends "admin/base.html.j2" %}

{% block header %}
<div class="col-sm-6">
    <h1 class="m-0 text-dark">Coupons</h1>
</div>
<div class="col-sm-6">
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item"><a href="/admin/coupons">Coupons</a></li>
        <l class="breadcrumb-item active">{% if "new" in request.path %}New{% else %}Edit{% endif %}</l>
    </ol>
</div>
{% endblock %}

{% block content %}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">{% if "new" in request.path %}New{% else %}Edit{% endif %} Coupon</h3>
    </div>
    <form action="" method="post">
        <div class="card-body">

            <div class="form-group">
                <label for="code">Code</label>
                <input type="text" class="form-control" id="code" name="code" value="{{ code }}">
            </div>

            <div class="form-group">
                <label for="discount">Discount</label>
                <input type="text" class="form-control" id="discount" name="discount" value="{{ coupon.discount }}">
                <div class="form-text">Enter the discount amount in prosentage. Making the discount 100 will disable the need to verify the payment through PayPal.  </div>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="claimed" name="claimed" {% if
                        coupon.used %}checked{% endif %}> Claimed
                    <span class="form-check-sign"></span>
                </label>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            {% if "edit" in request.path %}
            <a href="/admin/products/coupons/delete/{{ coupon.id }}" class="btn btn-danger">Delete</a> {% endif %}
            <a href="/admin/products/coupons" class="btn btn-secondary float-right">Cancel</a>
        </div>
    </form>
</div>


{% endblock %}